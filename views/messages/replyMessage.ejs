<form action="/messages/reply/<%= message._id %>" method="POST" id="replies-div">
  <div class="container">
    <% if(replies.length === 0){%>
    <p><%= message.messageBody %></p>
    <%}else{%>
    <% replies.map((reply, i)=>{%>
    <%if(i >= replies.length - 2){%>
    <p class="clearfix"><span class="float-left"><b><%= reply.replyBody%></b></span><span
        class="float-right"><%=reply.createdAt.toLocaleString()%></span></p>
    <%}%>
    <%})%>
    <%}%>
  </div>
  <div class="form-group container">
    <label for="replyBody">REPLY</label>
    <input type="text" name="replyBody" id="replyBody">
    <button class="btn btn-success">SEND</button>
  </div>
</form>